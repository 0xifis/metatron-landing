  <!-- CTA -->
  <CTASection
    bgColor="bg-mint-green-800"
    heading="Accelerate your funding cycle - Smarter, faster and responsible"
    action-text="Schedule a demo"
    actiion-link="https://calendly.com/metatron-demo/30min"
    description="Reach out to us to learn more about how you can benefit from being part of the community"
  >
    <div class="mt-4 flex justify-center">
      <Button href="https://calendly.com/metatron-demo/30min" target="_blank">Schedule a demo</Button>
    </div>
  </CTASection>
</Layout>

<style>
  main {
    color: white;
    /* background-color: #a4fcad; */
    background-image: url('/hero-bg.png');
    background-size: cover;
    background-position: center;
  }

  .text-gradient {
    /* background-image: var(--accent-gradient); */
    background-image: linear-gradient(to right, rgb(26, 139, 1) 0%, #091509 30%, white 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  @font-face {
    font-family: 'Kollektif';
    src: url('/fonts/kollektif.ttf') format('ttf');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
