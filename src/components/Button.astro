---
const { gradientBorder = false } = Astro.props
---

<button
  class=`bg-white text-black py-2 px-4 rounded-full shadow-md hover:bg-gray-200 transition-colors ${gradientBorder ? 'gradient-border' : ''}`
  type="button"
>
  <slot /></button
>

<style>
  .gradient-border {
    transition: opacity 2s ease;
  }

  .gradient-border:hover {
    --borderWidth: 4px;
    position: relative;
    border-radius: var(10 * --borderWidth);
  }

  .gradient-border:hover:after {
    content: '';
    position: absolute;
    top: calc(-1 * var(--borderWidth));
    left: calc(-1 * var(--borderWidth));
    height: calc(100% + var(--borderWidth) * 2);
    width: calc(100% + var(--borderWidth) * 2);
    background: linear-gradient(60deg, #f79533, #f37055, #ef4e7b, #a166ab, #5073b8, #1098ad, #07b39b, #6fba82);
    border-radius: calc(10 * var(--borderWidth));
    z-index: -1;
    animation: animatedgradient 2s ease alternate infinite;
    background-size: 300% 300%;
  }
</style>
