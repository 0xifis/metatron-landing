---
// Section component for headings and paragraphs
const { bgColor = 'bg-white' } = Astro.props;
---

<!-- src/components/Section.astro -->
<div class={`${bgColor} py-16 sm:py-24`}>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto lg:mx-0">
      <h2 class="text-3xl lg:text-5xl tracking-tight sm:text-4xl">
        <slot name="heading" />
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-300 sm:text-xl lg:text-2xl">
        <slot name="paragraph" />
      </p>
      <slot />
    </div>
  </div>
</div>
