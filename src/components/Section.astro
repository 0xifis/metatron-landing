---
// Section component for headings and paragraphs
const { bgColor = 'bg-white' } = Astro.props
---

<!-- src/components/Section.astro -->
<div class={`${bgColor} py-16 sm:py-24`}>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto lg:mx-0">
      <h2 class="max-w-2xl text-2xl tracking-tight sm:text-xl lg:text-4xl">
        <slot name="heading" />
      </h2>
      <p class="text-md mt-4 max-w-2xl text-gray-400 sm:text-lg lg:text-xl">
        <slot name="paragraph" />
      </p>
      <slot />
    </div>
  </div>
</div>
