<video
  autoplay
  muted
  loop
  playsinline
  preload="metadata"
  id="hero-video-background"
  class="absolute inset-0 z-0 h-screen w-screen object-cover opacity-0 transition-opacity duration-1000 ease-in-out"
>
  <source src="/hero-video.mp4" type="video/mp4" />
  <!-- Add additional source tags for other video formats if needed -->
  Your browser does not support the video tag.
</video>

<script>
  let video = document.getElementById('hero-video-background') as HTMLVideoElement
  if (video) {
    video.addEventListener('loadedmetadata', function () {
      video.style.opacity = '1' // Set opacity to 1 to fade in
    })
  }
  video.playbackRate = 0.3
</script>
