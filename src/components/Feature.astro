---
import { Icon } from 'astro-icon/components'
const { icon = 'heroicon:question', title, description = '', link = '' } = Astro.props
---

<!-- src/components/Feature.astro -->
<div class="flex flex-col rounded-lg border p-4 xl:p-6">
  <dt class="min-h-28 text-base leading-7 text-gray-600">
    <div class="mx-auto flex items-center justify-center">
      <Icon name={icon} class="h-12 w-12 p-2 text-mint-green-500" />
    </div>
    <h3 class="text-center text-lg tracking-tight sm:text-xl">{title}</h3>
  </dt>
  <dd class="mt-1 flex flex-auto flex-col text-center text-gray-500">
    <p class="flex-auto">{description}</p>
