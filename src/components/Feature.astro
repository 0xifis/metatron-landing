---
import { Icon } from 'astro-icon/components'
const { icon = 'heroicon:question', title, description = '', link = '' } = Astro.props
---

<!-- src/components/Feature.astro -->
<div class="flex flex-col p-4 border rounded-lg xl:p-6">
  <dt class="text-base text-gray-600 leading-7 min-h-28">
    <div class="flex items-center justify-center mx-auto">
      <Icon name={icon} class="w-12 h-12 p-2 text-mint-green-500" />
    </div>
    <h3 class="text-lg tracking-tight text-center sm:text-xl">{title}</h3>
  </dt>
  <dd class="flex flex-col flex-auto mt-1 text-center text-gray-500">
    <p class="flex-auto">{description}</p>
