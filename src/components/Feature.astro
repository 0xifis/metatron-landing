---
import { Icon } from 'astro-icon/components'
const { icon = 'heroicon:question', title, description = '', link = '' } = Astro.props
---

<!-- src/components/Feature.astro -->
<div class="flex flex-col border p-4 xl:p-6 rounded-lg">
  <dt class="text-base leading-7 text-gray-600 min-h-28">
    <div class="flex items-center justify-center mx-auto">
      <Icon name={icon} class="w-12 h-12 p-2 text-mint-green-500" />
    </div>
    <h3 class="text-lg tracking-tight sm:text-xl text-center">{title}</h3>
  </dt>
  <dd class="mt-1 flex flex-auto text-center flex-col text-gray-500">
    <p class="flex-auto">{description}</p>
